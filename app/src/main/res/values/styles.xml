<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContactButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?colorTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="iconPadding">24dp</item>
    </style>

    <style name="ActionDialogItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="DialogActionItemText">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#3BF5F5F5</item>
    </style>

</resources>