<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout

        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:paddingStart="34dp"
                android:id="@+id/bg_archive_left"
                android:alpha="0.8"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_action_archive_swipe"
                    />

                <TextView
                    android:layout_marginStart="22dp"
                    android:text="@string/unarchive_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bg_archive_right"
                android:paddingEnd="34dp"
                android:alpha="0.8"
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginEnd="22dp"
                    android:text="@string/unarchive_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_action_archive_swipe"
                    />

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/viewForeground"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:elevation="1dp"
                app:cardCornerRadius="8dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/home_card_wrap"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="2dp">

                    <ImageView
                        android:id="@+id/iv_note_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/tv_note_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="32dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_note_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Название группы" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_note_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Progress 95%"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_note_image"
                        app:layout_constraintTop_toBottomOf="@id/tv_note_title" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBar"
                        app:trackThickness="7dp"
                        app:trackCornerRadius="3dp"
                        app:indicatorColor="@color/status_blue"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:progress="30"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/iv_note_image"
                        app:layout_constraintTop_toBottomOf="@+id/tv_note_desc" />

                    <TextView
                        android:id="@+id/tv_group_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Progress: 95%"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_note_image"
                        app:layout_constraintTop_toBottomOf="@id/progressBar" />

                    <TextView
                        android:id="@+id/tv_note_pr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Completed: 0/5 "
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/tv_group_progress"
                        app:layout_constraintTop_toBottomOf="@id/progressBar" />

                    <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:id="@+id/iv_group_menu"
                        android:padding="2dp"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/ic_group_menu" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>





    </RelativeLayout>
</layout>